{
  "architecture": {
    "pattern": "layered",
    "layers": [
      {
        "name": "presentation",
        "can_depend_on": ["application"]
      },
      {
        "name": "application",
        "can_depend_on": ["domain", "infrastructure"]
      },
      {
        "name": "domain",
        "can_depend_on": []
      },
      {
        "name": "infrastructure",
        "can_depend_on": ["domain"]
      }
    ]
  },
  
  "rules": [
    {
      "id": "no-circular-dependencies",
      "enabled": true,
      "severity": "error",
      "description": "Modules must not have circular dependencies"
    },
    {
      "id": "respect-layer-boundaries",
      "enabled": true,
      "severity": "error",
      "description": "Modules can only depend on allowed layers"
    },
    {
      "id": "all-calls-must-exist",
      "enabled": true,
      "severity": "error",
      "description": "All function calls must reference exported functions"
    },
    {
      "id": "all-types-must-exist",
      "enabled": true,
      "severity": "error",
      "description": "All referenced types must be defined"
    },
    {
      "id": "declared-dependencies-must-be-used",
      "enabled": true,
      "severity": "warning",
      "description": "All declared dependencies should be used in function calls"
    },
    {
      "id": "used-dependencies-declared",
      "enabled": true,
      "severity": "error",
      "description": "All function calls must have their module declared as a dependency"
    }
  ],
  
  "custom_rules": [
    {
      "id": "repository-naming",
      "type": "naming-convention",
      "target": "export",
      "pattern": "^[A-Z][a-zA-Z]*Repository$",
      "severity": "warning",
      "description": "Repository classes should end with 'Repository'"
    },
    {
      "id": "service-naming",
      "type": "naming-convention",
      "target": "export",
      "pattern": "^[A-Z][a-zA-Z]*Service$",
      "severity": "warning",
      "description": "Service classes should end with 'Service'"
    },
    {
      "id": "max-module-dependencies",
      "type": "max-dependencies",
      "target": "module",
      "severity": "warning",
      "config": {
        "max": 5
      },
      "description": "Modules should not depend on more than 5 other modules"
    },
    {
      "id": "domain-must-be-pure",
      "type": "no-dependency",
      "target": "module",
      "pattern": "^domain$",
      "severity": "error",
      "description": "Domain layer must have no dependencies (pure business logic)"
    }
  ]
}
