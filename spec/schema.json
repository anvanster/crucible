{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://crucible.dev/schema/v0.1/manifest.json",
  "title": "Crucible Manifest",
  "description": "Crucible project manifest",
  "type": "object",
  "required": ["version", "project", "modules"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Crucible specification version"
    },
    "project": {
      "type": "object",
      "required": ["name", "language"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Project name"
        },
        "language": {
          "type": "string",
          "enum": ["typescript", "rust", "python", "go", "java"],
          "description": "Primary programming language"
        },
        "architecture_pattern": {
          "type": "string",
          "enum": ["layered", "hexagonal", "microservices", "modular"],
          "description": "Architectural pattern used"
        }
      }
    },
    "modules": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of module names"
    },
    "strict_validation": {
      "type": "boolean",
      "default": true,
      "description": "Enable strict validation rules"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": {"type": "string"},
        "repository": {"type": "string"},
        "created": {"type": "string", "format": "date-time"}
      }
    }
  },
  "definitions": {
    "module": {
      "$id": "#/definitions/module",
      "type": "object",
      "required": ["module", "version", "exports"],
      "properties": {
        "module": {
          "type": "string",
          "description": "Unique module identifier"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version"
        },
        "layer": {
          "type": ["string", "null"],
          "description": "Architectural layer"
        },
        "description": {
          "type": "string",
          "description": "Module description"
        },
        "exports": {
          "type": "object",
          "patternProperties": {
            "^[A-Z][a-zA-Z0-9]*$": {
              "$ref": "#/definitions/export"
            }
          }
        },
        "dependencies": {
          "type": "object",
          "patternProperties": {
            "^[a-z][a-zA-Z0-9_]*$": {
              "type": "string",
              "description": "Semantic version constraint"
            }
          }
        }
      }
    },
    "export": {
      "$id": "#/definitions/export",
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["class", "function", "interface", "type", "enum"]
        },
        "description": {
          "type": "string"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {"type": {"const": "class"}}
          },
          "then": {
            "properties": {
              "methods": {
                "type": "object",
                "patternProperties": {
                  "^[a-z][a-zA-Z0-9]*$": {
                    "$ref": "#/definitions/method"
                  }
                }
              },
              "properties": {
                "type": "object",
                "patternProperties": {
                  "^[a-z][a-zA-Z0-9]*$": {
                    "$ref": "#/definitions/property"
                  }
                }
              },
              "dependencies": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/dependency"
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": {"type": {"const": "function"}}
          },
          "then": {
            "required": ["inputs", "returns"],
            "properties": {
              "inputs": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/parameter"
                }
              },
              "returns": {
                "$ref": "#/definitions/returnType"
              },
              "throws": {
                "type": "array",
                "items": {"type": "string"}
              },
              "calls": {
                "type": "array",
                "items": {"type": "string", "pattern": "^[a-z][a-zA-Z0-9_]*\\.[A-Z][a-zA-Z0-9]*(\\.([a-z][a-zA-Z0-9]*))?$"}
              },
              "effects": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "database.read", "database.write", "database.transaction",
                    "network.request", "network.listen",
                    "file.read", "file.write",
                    "state.read", "state.write",
                    "session.create", "session.delete", "session.read"
                  ]
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": {"type": {"enum": ["interface", "type"]}}
          },
          "then": {
            "properties": {
              "properties": {
                "type": "object",
                "patternProperties": {
                  "^[a-z][a-zA-Z0-9]*$": {
                    "$ref": "#/definitions/property"
                  }
                }
              },
              "generics": {
                "type": "array",
                "items": {"type": "string", "pattern": "^[A-Z]$"}
              }
            }
          }
        },
        {
          "if": {
            "properties": {"type": {"const": "enum"}}
          },
          "then": {
            "required": ["values"],
            "properties": {
              "values": {
                "type": "array",
                "items": {"type": "string"}
              }
            }
          }
        }
      ]
    },
    "method": {
      "$id": "#/definitions/method",
      "type": "object",
      "required": ["inputs", "returns"],
      "properties": {
        "inputs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/parameter"
          }
        },
        "returns": {
          "$ref": "#/definitions/returnType"
        },
        "throws": {
          "type": "array",
          "items": {"type": "string"}
        },
        "calls": {
          "type": "array",
          "items": {"type": "string"}
        },
        "effects": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "parameter": {
      "$id": "#/definitions/parameter",
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "optional": {
          "type": "boolean",
          "default": false
        },
        "description": {
          "type": "string"
        }
      }
    },
    "returnType": {
      "$id": "#/definitions/returnType",
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string"
        },
        "inner": {
          "type": ["string", "null"]
        }
      }
    },
    "property": {
      "$id": "#/definitions/property",
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string"
        },
        "required": {
          "type": "boolean",
          "default": true
        },
        "description": {
          "type": "string"
        }
      }
    },
    "dependency": {
      "$id": "#/definitions/dependency",
      "type": "object",
      "required": ["module", "imports"],
      "properties": {
        "module": {
          "type": "string"
        },
        "imports": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "rules": {
      "$id": "#/definitions/rules",
      "type": "object",
      "properties": {
        "architecture": {
          "type": "object",
          "required": ["pattern"],
          "properties": {
            "pattern": {
              "type": "string",
              "enum": ["layered", "hexagonal", "microservices", "modular"]
            },
            "layers": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "can_depend_on"],
                "properties": {
                  "name": {"type": "string"},
                  "can_depend_on": {
                    "type": "array",
                    "items": {"type": "string"}
                  }
                }
              }
            }
          }
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "enabled", "severity"],
            "properties": {
              "id": {
                "type": "string",
                "enum": [
                  "no-circular-dependencies",
                  "respect-layer-boundaries",
                  "all-calls-must-exist",
                  "all-types-must-exist",
                  "declared-dependencies-must-be-used",
                  "used-dependencies-declared"
                ]
              },
              "enabled": {"type": "boolean"},
              "severity": {
                "type": "string",
                "enum": ["error", "warning", "info"]
              },
              "description": {"type": "string"},
              "config": {"type": "object"}
            }
          }
        },
        "custom_rules": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "type", "severity"],
            "properties": {
              "id": {"type": "string"},
              "type": {
                "type": "string",
                "enum": ["no-dependency", "max-dependencies", "naming-convention"]
              },
              "target": {
                "type": "string",
                "enum": ["module", "export", "method"]
              },
              "pattern": {"type": "string"},
              "severity": {
                "type": "string",
                "enum": ["error", "warning", "info"]
              }
            }
          }
        }
      }
    }
  }
}
